<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
    <p class="error"><%= flash[:error] %></p>
<% end %>
<%= form_tag("/home/", :method => "get", :action => "home") do %>
  <%= label_tag :start_date %>
  <%= select_date @start_date, :prefix => :start_date %><br />
  <%= label_tag :end_date %>
  <%= select_date @end_date, :prefix => :end_date %><br />
  <%= submit_tag "Filter" %>
<% end %>

