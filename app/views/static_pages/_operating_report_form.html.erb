<%= form_tag("/operating_report/", method: "get", action: "operating_report" ) do %>
  <%= label_tag :team %>
  <%= select_tag "team", options_from_collection_for_select(@teams, :id, :name) %><br />
  <%= label_tag :users %>
  <%= select_tag "users", options_from_collection_for_select(@users, :id, :username), multiple: true, prompt: 'All team members' %><br />
  <%= label_tag :start_date %>
  <%= select_date start_date, :prefix => :start_date %><br />
  <%= label_tag :end_date %>
  <%= select_date end_date, :prefix => :end_date %><br />
  <%= submit_tag "Regenerate Report" %>
<% end %>
